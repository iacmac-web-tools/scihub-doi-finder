{
	"manifest_version": 2,

	"name": "SciHub - DOI",
	"description": "Searching articles on Sci-Hub using DOI",
	"version": "1.4",
	"background": {
		"scripts": ["background.js"]
	},

    "permissions": ["contextMenus"],
    "icons": {
        "16": "icon-16.png",
        "19": "icon-19.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
	},
	"options_page": "options_page.html",
	"browser_action": {
		"default_icon": "icon-128.png",
		"default_title": "Go to Sci-Hub!"
	}
}